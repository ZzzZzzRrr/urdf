<launch>

    <param name="robot_description" command="$(find xacro)/xacro $(find  urdf_rviz)/urdf/xacro/car.xacro" />
    <node pkg="rviz" type="rviz" name="rviz" args="-d $(find urdf_rviz)/config/show_mycar.rviz" /> 

    <!-- 添加关节状态发布节点 -->
    <node pkg="joint_state_publisher" type="joint_state_publisher" name="joint_state_publisher" />

    <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher" />

   <!-- 集成arbotix运动控制节点，并且加载参数 -->
<node name="driver" pkg="arbotix_python" type="arbotix_driver" output="screen">
     <rosparam file="$(find  urdf_rviz)/config/control.yaml"  command="load" />
     <param name="sim" value="true" />
</node>

</launch>